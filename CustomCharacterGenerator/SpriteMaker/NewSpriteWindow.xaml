<Window x:Class="SpriteMaker.NewSpriteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpriteMaker"
        mc:Ignorable="d"
        Title="NewSpriteWindow" Height="450" Width="450">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Label Content="Width:" Grid.Row="0"/>
        <TextBox Name="NumberTextBoxWidth" Grid.Row="1" Margin="10,10,10,10" Text="32" PreviewTextInput="NumberValidationTextBox"/>
        <Label Content="Height:" Grid.Row="2"/>
        <TextBox Name="NumberTextBoxHeight" Grid.Row="3" Margin="10,10,10,10" Text="32" PreviewTextInput="NumberValidationTextBox"/>
        <Button Name="OKBtn" Content="Valider"  Grid.Row="4" Click="OK"/>
    </Grid>
</Window>
